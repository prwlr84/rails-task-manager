<div class="container">
  <div class="card">
    <h3>Is it done?  <input type="checkbox" name="" id="" <%= @task.boolean == false ? "checked" : "" %>></h3>
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
  </div>
</div>

<%= link_to "EDIT", edit_task_path(@task) %>
<%= link_to "BACK to all", tasks_path %>
<%= link_to "DELETE", @task, method: :delete, data: { confirm: 'Really?'} %>
